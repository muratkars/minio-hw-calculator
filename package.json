{
  "name": "minio-hw-calculator",
  "version": "1.0.0",
  "description": "A web-based tool for calculating optimal hardware configurations for MinIO object storage deployments",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "prepare-data": "python scripts/convert_to_json.py",
    "validate-data": "python scripts/validate_data.py"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^0.34.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^0.34.0"
  },
  "keywords": [
    "minio",
    "hardware",
    "calculator",
    "storage",
    "object-storage",
    "erasure-coding"
  ],
  "author": "Murat Karslioglu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/muratkars/minio-hw-calculator.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
